<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:hint="Enter Identification Tag"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textSize="24sp" />

    <Button
        android:id="@+id/scheduleJob"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:onClick="startLocationJobService"
        android:text="Schedule Job"
        android:textAllCaps="false"
        android:textSize="28sp" />

    <Button
        android:id="@+id/cancelJob"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="cancelLocationJobService"
        android:text="Cancel Job"
        android:textAllCaps="false"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="10dp">

        <Button
            android:id="@+id/hide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="hideUnHideApp"
            android:padding="5dp"
            android:text="Hide"
            android:textAllCaps="false"
            android:textSize="28sp" />

        <Button
            android:id="@+id/unHide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="hideUnHideApp"
            android:padding="5dp"
            android:text="UnHide"
            android:textAllCaps="false"
            android:textSize="28sp" />

    </LinearLayout>

</LinearLayout>